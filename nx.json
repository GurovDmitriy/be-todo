{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "all": ["{projectRoot}/**/*"],
    "public": ["!{projectRoot}/**/*.test.*"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["public", "^public"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["all", "^public"],
      "cache": true
    }
  },
  "defaultBase": "master",
  "plugins": [
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "jest:test"
      }
    }
  ]
}
